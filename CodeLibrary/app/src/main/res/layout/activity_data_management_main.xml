<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#b06f5155">

    <Button android:id="@+id/goToDataManagementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Add Data - Internal File"
        android:onClick="addDataInternalFile"
        android:layout_alignStart="@+id/addDataInternalDatabase"
        android:layout_alignEnd="@+id/addDataInternalDatabase" />

    <Button
        android:id="@+id/addDataInternalDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data - Internal Database"
        android:onClick="addDataInternalDatabase"
        android:layout_below="@+id/goToDataManagementButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoImg"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/goToDataManagementButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />

</RelativeLayout>
